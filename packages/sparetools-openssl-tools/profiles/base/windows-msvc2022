sparetools-openssl/*:enable_asm=True
sparetools-openssl/*:enable_avx=True
sparetools-openssl/*:enable_avx2=True
sparetools-openssl/*:enable_zlib=True

[conf]
# MSVC/Visual Studio configuration
tools.cmake.cmaketoolchain:generator=Visual Studio 17 2022
