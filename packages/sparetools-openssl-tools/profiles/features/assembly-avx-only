# Assembly Optimization Profile - AVX Only
#
# Enables AVX optimizations while disabling AVX2 and other SIMD sets
# Performance boost: 8-15% for cryptographic operations
#
# Recommended for:
# - Older x86_64 systems with AVX support
# - Compatibility with Sandy Bridge/Ivy Bridge era processors
# - Reduced memory bandwidth requirements
# - Systems requiring strict instruction set compatibility

[options]
sparetools-openssl/*:enable_asm=True
sparetools-openssl/*:enable_avx=True
sparetools-openssl/*:enable_avx2=False
sparetools-openssl/*:enable_neon=False
sparetools-openssl/*:enable_sve=False

[settings]
build_type=Release

[conf]
tools.build:skip_test=False
tools.cmake.cmaketoolchain:generator=Ninja
