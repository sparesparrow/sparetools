# Assembly Optimization Profile - Maximum Performance
#
# Enables all available SIMD instruction sets for the target architecture
# Performance boost: 20-40% for cryptographic operations
#
# Recommended for:
# - High-performance servers
# - TLS termination proxies
# - Cryptographic accelerators
# - Performance-critical applications

[options]
sparetools-openssl/*:enable_asm=True
sparetools-openssl/*:enable_avx=True
sparetools-openssl/*:enable_avx2=True
sparetools-openssl/*:enable_neon=True
sparetools-openssl/*:enable_sve=False

[settings]
build_type=Release

[conf]
# Optimize for speed
tools.build:skip_test=False
tools.cmake.cmaketoolchain:generator=Ninja
