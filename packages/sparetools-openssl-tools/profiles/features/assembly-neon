# Assembly Optimization Profile - ARM NEON
#
# Enables ARM NEON SIMD optimizations for cryptographic operations
# Performance boost: 20-35% for ARM processors with NEON support
#
# Recommended for:
# - ARM64 (ARMv8) systems
# - ARM processors with NEON support (ARMv7 NEON)
# - Mobile/embedded systems
# - IoT devices with ARM processors

[options]
sparetools-openssl/*:enable_asm=True
sparetools-openssl/*:enable_avx=False
sparetools-openssl/*:enable_avx2=False
sparetools-openssl/*:enable_neon=True
sparetools-openssl/*:enable_sve=False

[settings]
build_type=Release

[conf]
tools.build:skip_test=False
tools.cmake.cmaketoolchain:generator=Ninja
